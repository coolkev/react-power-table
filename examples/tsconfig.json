{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "baseUrl": "./",
    "paths": {
        "react-power-table": ["../@types/"],
      //"react-power-table": ["../src/"],
      "*" : ["node_modules/*"]
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ],  
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  }
}