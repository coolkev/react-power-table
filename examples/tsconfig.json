{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "alwaysStrict": true,
    "noEmitOnError": true,
    "moduleResolution": "node"    ,
    "declaration": false
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}