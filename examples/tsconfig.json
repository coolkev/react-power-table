{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "removeComments": false,
    "sourceMap": false,
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "alwaysStrict": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "react-power-table": [
        //"../@types/react-power-table/"
        "../src/"
      ],
      "react-power-table/*": [
        //"../@types/react-power-table/*"
        "../src/*"
      ],
      "*": [
        "node_modules/*"
      ]
    }
    //   // "react-power-table/Column": [
    //   //   "../@types/react-power-table/Column"
    //   //   //"../src/"
    //   // ],
    //   //"react-power-table": ["../src/"],
    //   //"*" : ["node_modules/*"]
    // },
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useTranspileModule": true,
    "babelOptions": {
      "presets": ["es2015", "stage-1", "react"],
      "plugins": [         
        "react-hot-loader/babel"
      ]
    }
  }
}